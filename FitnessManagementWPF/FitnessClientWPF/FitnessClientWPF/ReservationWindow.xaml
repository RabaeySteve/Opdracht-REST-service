<Window x:Class="FitnessClientWPF.ReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClientWPF"

        mc:Ignorable="d"
        Title="ReservationWindow" Height="200" Width="400">
    <Grid>
        <Border CornerRadius="10" BorderBrush="#007acc" BorderThickness="2" Padding="10" Margin="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#333333" Text="Sure you want to add Reservation" TextWrapping="Wrap" Margin="10"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                    <Button Name="YesButton" Content="yes" Width="100" Margin="10" Background="#007acc" Foreground="White" Padding="5" Click="YesButton_Click"/>
                    <Button Name="NoButtoon" Content="no" Width="100" Margin="10" Background="#cccccc" Foreground="#333333" Padding="5" Click="NoButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
